[user]
	name = Mikael Arneborn
	email = marneborn@gmail.com

[alias]
	ci = commit
	co = checkout
	st = status --short
	br = branch
	ds = diff --name-status
	dfw = diff --ignore-space-change
	dfwtool = difftool --ignore-space-change
	dftm = difftool -y --diff-filter=M --ignore-space-change
  lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lg = !"git lg1"
  show-branches = "for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'"
  orphank = !gitk --all --date-order ``git reflog | cut -c1-7``

[merge]
	tool = meld
	keepBackup = false

[mergetool "meld"]
  cmd = open -W -a /Applications/Meld.app/Contents/MacOS/Meld \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output=\"$MERGED\"
  # cmd = open -W -a Meld --args --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output=\"$MERGED\"
	keepBackup = false
	trustExitCode = true

[core]
	editor = /Applications/Emacs.app/Contents/MacOS/Emacs
	whitespace = trailing-space,space-before-tab,indent-with-non-tab
	excludesFile = /Users/mikael/.gitignore
	pager =

[mergetool]	keepBackup = false

[credential]

[diff]
	tool = meld

[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a /Applications/Meld.app/Contents/MacOS/Meld \"$LOCAL\" \"$REMOTE\"

[hub]
	host = https://github.com/marneborn


